<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Nullable>enable</Nullable>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\**\*" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="wwwroot\**\*" />
  </ItemGroup>
  
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.0.0" />
    <PackageReference Include="Penguin.Cms.Abstractions" Version="1.0.0" />
    <PackageReference Include="Penguin.Cms.Core" Version="2.0.0" />
    <PackageReference Include="Penguin.Cms.Web" Version="1.0.0" />
    <PackageReference Include="Penguin.Extensions.Collections" Version="2.0.3" />
    <PackageReference Include="Penguin.Extensions.String" Version="3.0.2" />
    <PackageReference Include="Penguin.Navigation.Abstractions" Version="1.0.0" />
    <PackageReference Include="Penguin.Reflection.Serialization" Version="3.0.6" />
    <PackageReference Include="Penguin.Reflection.Serialization.Abstractions" Version="3.0.0" />
    <PackageReference Include="Penguin.Reflection.Serialization.Extensions" Version="3.0.4" />
  </ItemGroup>


</Project>
